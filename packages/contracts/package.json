{
  "name": "@creaturenft/contracts",
  "version": "1.0.0",
  "description": "Hardhat smartcontracts",
  "main": "dist",
  "author": "CmdrNFT <cmdrnft@protonmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc --build",
    "compile": "[ ! -e \"deployments/networks.json\" ] && mkdir -p deployments && echo \"{}\" > deployments/networks.json; hardhat compile",
    "deploy:localhost": "hardhat deploy --network localhost --export-all deployments/networks.json",
    "mint:localhost": "hardhat mint --network localhost --cost 1",
    "deploy:hardhat": "hardhat deploy --network hardhat --export-all deployments/networks.json",
    "deploy:maticmum": "hardhat deploy --network maticmum --export-all deployments/networks.json",
    "deploy:goerli": "hardhat deploy --network goerli --export-all deployments/networks.json",
    "start:dev": "hardhat node --network hardhat  --export-all deployments/networks.json",
    "test": "hardhat test",
    "fund": "hardhat fund"
  },
  "dependencies": {
    "ethers": "^5.5.3"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.0.0",
    "@ethersproject/bytes": "^5.0.0",
    "@ethersproject/hardware-wallets": "^5.0.14",
    "@ethersproject/providers": "^5.0.0",
    "@maticnetwork/maticjs": "^3.2.2",
    "@nomiclabs/hardhat-ethers": "^2.0.4",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.4.1",
    "@typechain/ethers-v5": "^8.0.5",
    "@typechain/hardhat": "^4.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.8",
    "@types/react": "^17.0.38",
    "@types/web3": "^1.2.2",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "chai": "^4.3.4",
    "dotenv": "^11.0.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.0.0",
    "ethereum-waffle": "^3.4.0",
    "ganache": "^7.0.0-beta.2",
    "hardhat": "^2.8.2",
    "hardhat-deploy": "^0.9.24",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "hardhat-etherscan": "^1.0.1",
    "hardhat-gas-reporter": "^1.0.7",
    "lodash": "^4.17.15",
    "mocha": "^9.1.3",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.6",
    "solidity-bytes-utils": "^0.8.0",
    "solidity-coverage": "^0.7.17",
    "ts-node": "^10.4.0",
    "typechain": "^7.0.0",
    "typescript": "^4.5.4"
  }
}
