{
  "compilerOptions": {
    "composite": true,
    "lib": ["ES2018", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "target": "ES2018",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noEmit": false,
    "outDir": "./dist"
  },
  "include": [
    "./hardhat.config.ts",
    "./index.ts",
    "deploy/**/*.ts",
    "typechain/**/*.ts",
    "utils/**/*.ts",
    "test/**/*.ts",
    "deployments/**/*.json"
  ],
  "exclude": ["node_modules"]
}
