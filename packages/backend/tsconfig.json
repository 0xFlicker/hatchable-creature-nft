{
  "compilerOptions": {
    "composite": true,
    "lib": ["ES2020"],
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "target": "ES2018",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "listEmittedFiles": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../contracts"
    },
    {
      "path": "../assets"
    },
    {
      "path": "../ipfs"
    },
    {
      "path": "../mockipfs"
    }
  ]
}
